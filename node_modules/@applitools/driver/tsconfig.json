{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "types",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "allowJs": true,

    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "stripInternal": false,
    "removeComments": false,
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude" : ["dist", "types", "test"],
}